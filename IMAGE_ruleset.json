{
   "further_details_iri" : "https://github.com/bioinformatics-ptp/IMAGE-metadata/blob/master/README.md",
   "description" : "Validation rules for the IMAGE project.",
   "name" : "IMAGE sample metadata rules",
   "rule_groups" : [
      {
         "rules" : [
            {
               "example" : "NCBI Taxonomy",
               "type" : "text",
               "mandatory" : "mandatory",
               "name" : "library name"
            },
            {
               "type" : "uri",
               "example" : "https://www.ebi.ac.uk/ols/ontologies/ncbitaxon",
               "mandatory" : "mandatory",
               "name" : "library URI"
            },
            {
               "name" : "library version",
               "mandatory" : "recommended",
               "type" : "text"
            }
         ],
         "name" : "ontology library"
      },
      {
         "name" : "study",
         "rules" : [
            {
               "valid_values" : [
                  "IMAGE"
               ],
               "name" : "project",
               "description" : "state it is an IMAGE project",
               "example" : "IMAGE",
               "type" : "text",
               "mandatory" : "mandatory"
            },
            {
               "description" : "identify the study",
               "name" : "study id",
               "mandatory" : "mandatory",
               "example" : "example IMAGE study",
               "type" : "text"
            },
            {
               "type" : "text",
               "example" : "It is a fake study which collects pig, sheep, cows sample from 12 countries all over the europe to see which country has the best meat",
               "mandatory" : "recommended",
               "name" : "study description",
               "description" : "brief introduction of study, could include but not limited to the purpose of the study, experiment design etc"
            },
            {
               "name" : "researcher last name",
               "description" : "the last names of the author list of the study which is separated by ;",
               "type" : "text",
               "example" : "Harrison; Caprera",
               "allow_multiple" : 1,
               "mandatory" : "mandatory"
            },
            {
               "example" : "Peter; Andrea",
               "type" : "text",
               "allow_multiple" : 1,
               "mandatory" : "mandatory",
               "name" : "researcher first name",
               "description" : "the first names of the author list of the study which is separated by ;"
            },
            {
               "mandatory" : "mandatory",
               "allow_multiple" : 1,
               "type" : "text",
               "example" : "peter@ebi.ac.uk, 0044-(0)1223492589; andrea.caprera@ptp.it",
               "description" : "the contact emails of the researchers, separated by ; and should have the same length as the name list",
               "name" : "researcher contact"
            },
            {
               "name" : "researcher affiliation",
               "description" : "the affiliation list of researchers, each affiliation is represented by numbers. One research can have multiple affiliations which is separated by ,",
               "example" : "1;2",
               "type" : "text",
               "allow_multiple" : 1,
               "mandatory" : "mandatory"
            },
            {
               "name" : "Affiliation name",
               "type" : "text",
               "example" : "1. EMBL EBI; 2. PTP",
               "mandatory" : "mandatory",
               "allow_multiple" : 1
            },
            {
               "name" : "Affiliation address",
               "allow_multiple" : 1,
               "mandatory" : "recommended",
               "type" : "text",
               "example" : "1. European Bioinformatics Institute, Wellcome Trust Genome Campus, CB10 1SD, UK; "
            },
            {
               "example" : "1. www.ebi.ac.uk;",
               "type" : "text",
               "allow_multiple" : 1,
               "mandatory" : "optional",
               "name" : "Affiliation uri"
            },
            {
               "allow_multiple" : 1,
               "mandatory" : "optional",
               "type" : "text",
               "example" : "1. United Kingdom; 2. Italy",
               "description" : "the country where the affiliation is based, the controlled vocabulary for countries is from INSDC http://www.insdc.org/documents/country-qualifier-vocabulary",
               "name" : "Affiliation country"
            },
            {
               "type" : "limited values",
               "example" : "1. curator;  2. submitter",
               "mandatory" : "mandatory",
               "allow_multiple" : 1,
               "name" : "Affiliation Role",
               "valid_terms" : [
                  {
                     "ontology_name" : "EFO",
                     "term_iri" : "http://purl.obolibrary.org/obo/EFO_0002012"
                  }
               ]
            },
            {
               "name" : "publication PUBMED",
               "type" : "integers",
               "example" : "1234567890",
               "mandatory" : "optional"
            },
            {
               "name" : "publication DOI",
               "mandatory" : "optional",
               "type" : "valid doi",
               "example" : "10.1111/age.12295"
            }
         ]
      },
      {
         "rules" : [
            {
               "name" : "study id",
               "description" : "must be one of the values used in the study id column in the study sheet",
               "type" : "text",
               "example" : "example IMAGE study",
               "mandatory" : "mandatory"
            },
            {
               "type" : "text",
               "mandatory" : "mandatory",
               "valid_values" : [
                  "SAMEAXXXXXXX"
               ],
               "comment" : "The BioSample ID could be empty before submitting BioSample. After the submission, the returned BioSample ID MUST be filled",
               "name" : "BioSample id"
            },
            {
               "name" : "source sample id",
               "mandatory" : "mandatory",
               "type" : "text",
               "example" : "Siems_0722_393449"
            },
            {
               "type" : "text",
               "example" : "CyroWEB DE, French system ",
               "mandatory" : "mandatory",
               "name" : "source name",
               "description" : "the name of the source of genebank"
            },
            {
               "type" : "date",
               "example" : "2017-04",
               "valid_units" : [
                  "YYYY-MM"
               ],
               "mandatory" : "mandatory",
               "comment" : "Record at the month level, if no month available, recorded as Jan of the year",
               "name" : "source version"
            },
            {
               "name" : "animal BioSample id",
               "mandatory" : "mandatory",
               "type" : "text"
            },
            {
               "name" : "animal source id",
               "mandatory" : "mandatory",
               "example" : "ANIMAL:::ID:::132713",
               "type" : "text"
            },
            {
               "mandatory" : "mandatory",
               "type" : "text",
               "example" : "OAR_RI_AF1_AA",
               "name" : "name"
            },
            {
               "name" : "description",
               "example" : "Chianina",
               "type" : "text",
               "mandatory" : "recommended"
            },
            {
               "mandatory" : "mandatory",
               "type" : "limited value",
               "valid_terms" : [
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/OBI_0001479",
                     "allow_descendants" : 0,
                     "ontology_name" : "OBI"
                  },
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/OBI_0001468",
                     "ontology_name" : "OBI",
                     "allow_descendants" : 0
                  },
                  {
                     "ontology_name" : "OBI",
                     "allow_descendants" : 0,
                     "term_iri" : "http://purl.obolibrary.org/obo/OBI_0302716"
                  },
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/OBI_0001876",
                     "allow_descendants" : 0,
                     "ontology_name" : "OBI"
                  },
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/CLO_0000031",
                     "allow_descendants" : 0,
                     "ontology_name" : "CLO"
                  }
               ],
               "name" : "material",
               "valid_values" : [
                  "specimen from organism",
                  "cell specimen",
                  "pool of specimens",
                  "cell culture",
                  "cell line"
               ]
            },
            {
               "example" : "ftp://ftp.faang.ebi.ac.uk/ftp/protocols/samples/WUR_SOP_animal_sampling_20160405.pdf",
               "type" : "uri",
               "mandatory" : "mandatory",
               "name" : "protocol",
               "description" : "A link to the protocol used to collect this sample"
            },
            {
               "allow_multiple" : 1,
               "mandatory" : "recommended",
               "type" : "uri",
               "description" : "Email address or website to contact to obtain the samples. Use the contact details of the registrant.",
               "name" : "contact"
            },
            {
               "description" : "Date when the sample was collected",
               "name" : "collection date",
               "valid_units" : [
                  "YYYY-MM-DD",
                  "YYYY-MM",
                  "YYYY"
               ],
               "mandatory" : "mandatory",
               "example" : "1992-01-17",
               "type" : "date"
            },
            {
               "name" : "collection place latitude",
               "example" : "47.86591",
               "type" : "double",
               "mandatory" : "recommended",
               "valid_units" : [
                  "decimal degrees"
               ]
            },
            {
               "name" : "collection place longitude",
               "example" : "12.19115",
               "type" : "double",
               "valid_units" : [
                  "decimal degrees"
               ],
               "mandatory" : "recommended"
            },
            {
               "name" : "collection place",
               "example" : "Germany",
               "type" : "text",
               "mandatory" : "mandatory"
            },
            {
               "name" : "collection condition",
               "example" : "10ml blood from leg was collected",
               "type" : "text",
               "mandatory" : "optional"
            },
            {
               "name" : "storage date",
               "mandatory" : "recommended",
               "valid_units" : [
                  "YYYY-MM-DD",
                  "YYYY-MM",
                  "YYYY"
               ],
               "example" : "1992-01-17",
               "type" : "date"
            },
            {
               "type" : "date",
               "mandatory" : "recommended",
               "valid_units" : [
                  "YYYY-MM-DD",
                  "YYYY-MM",
                  "YYYY"
               ],
               "name" : "submission date"
            },
            {
               "comment" : "is this same as tissue? Ontology for part of organism specimen from, UBERON is preferred to BTO",
               "valid_terms" : [
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/UBERON_0001062",
                     "ontology_name" : "UBERON"
                  },
                  {
                     "ontology_name" : "BTO",
                     "term_iri" : "http://purl.obolibrary.org/obo/BTO_0000042"
                  }
               ],
               "name" : "organism part",
               "mandatory" : "mandatory",
               "type" : "text"
            },
            {
               "type" : "text",
               "mandatory" : "recommended",
               "name" : "developmental stage",
               "valid_terms" : [
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/EFO_0000399",
                     "ontology_name" : "EFO"
                  }
               ]
            }
         ],
         "name" : "sample"
      },
      {
         "rules" : [
            {
               "type" : "text",
               "mandatory" : "mandatory",
               "name" : "BioSample ID",
               "valid_values" : [
                  "SAMEAXXXXXXX"
               ],
               "comment" : "The BioSample ID could be empty before submitting BioSample. After the submission, the returned BioSample ID MUST be filled"
            },
            {
               "name" : "name",
               "mandatory" : "mandatory",
               "type" : "text",
               "example" : "OAR_RI_AF1"
            },
            {
               "mandatory" : "mandatory",
               "example" : "ANIMAL:::ID:::132713",
               "type" : "text",
               "name" : "source animal id"
            },
            {
               "mandatory" : "mandatory",
               "example" : "CyroWEB DE, French system ",
               "type" : "text",
               "description" : "the name of the source of genebank",
               "name" : "source name"
            },
            {
               "name" : "source version",
               "comment" : "Record at the month level, if no month available, recorded as Jan of the year",
               "valid_units" : [
                  "YYYY-MM"
               ],
               "mandatory" : "mandatory",
               "type" : "date",
               "example" : "2017-04"
            },
            {
               "name" : "father BioSampleID",
               "valid_values" : [
                  "SAMEAXXXXXXX"
               ],
               "type" : "text",
               "mandatory" : "optional"
            },
            {
               "name" : "father source id",
               "mandatory" : "optional",
               "example" : "ANIMAL:::ID:::541008",
               "type" : "text"
            },
            {
               "valid_values" : [
                  "SAMEAXXXXXXX"
               ],
               "name" : "mother BioSampleID",
               "type" : "text",
               "mandatory" : "optional"
            },
            {
               "name" : "mother source id",
               "type" : "text",
               "example" : "ANIMAL:::ID:::507050",
               "mandatory" : "optional"
            },
            {
               "name" : "breed",
               "description" : "The breed of the animal, the value of which matches to the breed origin column in the breed sheet",
               "comment" : "the species of the animal can be retrieved from breed",
               "example" : "Bunte Bentheimer",
               "type" : "text",
               "mandatory" : "mandatory"
            },
            {
               "type" : "date",
               "example" : "1990-07-17",
               "mandatory" : "recommended",
               "valid_units" : [
                  "YYYY-MM-DD",
                  "YYYY-MM",
                  "YYYY"
               ],
               "name" : "birth date",
               "description" : "The date when the animal was born",
               "comment" : "Fill in the date as accurate as possible, at least fill in the year"
            },
            {
               "name" : "birth status",
               "description" : "The status of the birth, could be premature birth for 2 weeks, normal",
               "type" : "text",
               "example" : "normal",
               "mandatory" : "optional"
            },
            {
               "valid_libraries" : [
                  "PATO"
               ],
               "valid_values" : [
                  "male",
                  "female"
               ],
               "name" : "sex",
               "type" : "limited values",
               "example" : "male (PATO:0000384)",
               "comment" : "could split into two columns",
               "valid_terms" : [
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/PATO_0000384",
                     "allow_descendants" : 0,
                     "ontology_name" : "PATO"
                  },
                  {
                     "term_iri" : "http://purl.obolibrary.org/obo/PATO_0000383",
                     "allow_descendants" : 0,
                     "ontology_name" : "PATO"
                  }
               ],
               "mandatory" : "mandatory"
            },
            {
               "name" : "submission date",
               "type" : "date",
               "example" : "2014-01-30",
               "mandatory" : "recommended",
               "valid_units" : [
                  "YYYY-MM-DD",
                  "YYYY-MM",
                  "YYYY"
               ]
            },
            {
               "name" : "farm latitude",
               "example" : "47.86591",
               "type" : "double",
               "mandatory" : "recommended",
               "valid_units" : [
                  "decimal degrees"
               ]
            },
            {
               "name" : "farm longitude",
               "valid_units" : [
                  "decimal degrees"
               ],
               "mandatory" : "recommended",
               "type" : "double",
               "example" : "12.19115"
            },
            {
               "description" : "the place of the farm, town/city could be optional, country must be there",
               "name" : "farm place",
               "mandatory" : "mandatory",
               "type" : "text",
               "example" : "Berlin Germany"
            },
            {
               "name" : "reproduction place",
               "mandatory" : "optional",
               "example" : "Germany",
               "type" : "text"
            },
            {
               "type" : "uri",
               "allow_multiple" : 1,
               "mandatory" : "optional",
               "name" : "photo"
            }
         ],
         "name" : "animal"
      },
      {
         "name" : "breed",
         "rules" : [
            {
               "mandatory" : "mandatory",
               "type" : "text",
               "example" : "Bunte Bentheimer",
               "name" : "breed origin"
            },
            {
               "name" : "mapped breed",
               "mandatory" : "recommended",
               "type" : "text",
               "example" : "Bentheim Black Pied"
            },
            {
               "name" : "mapped breed ontology library",
               "type" : "text",
               "example" : "LBO",
               "mandatory" : "recommended"
            },
            {
               "name" : "mapped breed accession",
               "mandatory" : "recommended",
               "type" : "accession",
               "example" : "LBO_0000347"
            },
            {
               "mandatory" : "mandatory",
               "example" : "Germany",
               "type" : "text",
               "description" : "INSDC list",
               "name" : "country"
            },
            {
               "name" : "photo",
               "mandatory" : "recommended",
               "allow_multiple" : 1,
               "type" : "uri"
            },
            {
               "type" : "text",
               "example" : "Sus scrofa",
               "mandatory" : "mandatory",
               "name" : "species"
            },
            {
               "example" : "NCBI Taxonomy",
               "type" : "text",
               "mandatory" : "mandatory",
               "name" : "species ontology library"
            },
            {
               "name" : "species ontology accession",
               "mandatory" : "mandatory",
               "type" : "accession",
               "example" : "NCBITaxon_9823"
            }
         ]
      }
   ]
}

