               "Allow Multiple" : "no",
               "Required" : "optional",
               "Valid units" : [
                  "minutes",
                  "hours",
                  "days",
                  "weeks",
                  "months",
                  "years",
                  "minute",
                  "hour",
                  "day",
                  "week",
                  "month",
                  "year"
